{
  "name": "nestjs-trpc-v2",
  "version": "1.0.0",
  "description": "A maintained fork of nestjs-trpc - End-to-end typesafe APIs with tRPC in NestJS",
  "homepage": "https://nestjs-trpc-v2.io",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "license": "MIT",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "rm -rf dist && tsc --project tsconfig.build.json",
    "start:dev": "tsc --project tsconfig.json --watch --preserveWatchOutput",
    "dev": "tsc --project tsconfig.json --watch --preserveWatchOutput",
    "debug:dev": "ts-node --inspect-brk lib/index.ts",
    "clean": "tsc -b --clean",
    "lint": "eslint \"{lib,test}/**/*.ts\"",
    "lint:fix": "eslint \"{lib,test}/**/*.ts\" --fix",
    "format": "prettier --write \"{lib,test}/**/*.ts\"",
    "format:check": "prettier --check \"{lib,test}/**/*.ts\"",
    "check-types": "tsc --noEmit",
    "test": "TS_JEST_DISABLE_VER_CHECKER=true jest --no-watchman --coverage",
    "test:e2e": "TS_JEST_DISABLE_VER_CHECKER=true jest --config jest.e2e.config.js --no-watchman",
    "test:e2e:watch": "TS_JEST_DISABLE_VER_CHECKER=true jest --config jest.e2e.config.js --watch",
    "test:all": "pnpm test && pnpm test:e2e"
  },
  "keywords": [
    "nestjs",
    "trpc",
    "adapter",
    "nest",
    "express",
    "fastify",
    "api",
    "typescript",
    "types",
    "typesafe",
    "end-to-end",
    "rpc",
    "decorators",
    "zod",
    "validation",
    "nestjs-trpc",
    "fork",
    "maintained"
  ],
  "author": {
    "name": "Michael Guay",
    "email": "guay.me@gmail.com",
    "url": "https://michaelguay.dev"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "peerDependencies": {
    "@nestjs/common": "^9.3.8 || ^10.0.0 || ^11.0.0",
    "@nestjs/core": "^9.3.8 || ^10.0.0 || ^11.0.0",
    "@trpc/server": "^10.0.0 || ^11.0.0",
    "reflect-metadata": "^0.1.13 || ^0.2.0",
    "rxjs": "^7.8.1",
    "zod": "^3.14.0 || ^4.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@nestjs/common": "11.1.9",
    "@nestjs/core": "11.1.9",
    "@nestjs/testing": "11.1.9",
    "@trpc/server": "^11.8.1",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/lodash": "^4.17.21",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "fastify": "^5.6.2",
    "jest": "^30.2.0",
    "reflect-metadata": "0.2.2",
    "rxjs": "7.8.2",
    "ts-jest": "^29.4.6",
    "ts-node": "10.9.2",
    "tsconfig-paths": "^4.2.0",
    "type-fest": "^5.3.1",
    "typescript": "5.9.3",
    "typescript-eslint": "^8.50.0",
    "zod": "^4.2.1"
  },
  "dependencies": {
    "lodash": "^4.17.21",
    "ts-morph": "27.0.2",
    "tslib": "^2.8.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mguay22/nestjs-trpc-v2",
    "directory": "packages/nestjs-trpc-v2"
  },
  "bugs": {
    "url": "https://github.com/mguay22/nestjs-trpc-v2/issues"
  }
}
