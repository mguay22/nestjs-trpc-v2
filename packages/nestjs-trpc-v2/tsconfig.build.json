{
  "extends": "../tsconfig.build.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./lib",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "ES2020",
    "lib": ["ES2020"],
    "downlevelIteration": true,
    "skipLibCheck": true
  },
  "include": ["lib/**/*.ts"],
  "exclude": ["node_modules", "dist", "lib/**/__tests__/*", "*.spec.ts"]
}
